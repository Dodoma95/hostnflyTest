<h1>Listing all apartments</h1>
<p>
  <%= link_to "Create new apartment", new_apartment_path %> | <%= link_to "Create missions", new_mission_path %> | <%= link_to "Back home", root_path %>
</p>

<table>
  <tr>
    <th>Id</th>
    <th>Numbers of rooms</th>
  </tr>

  <% if @apartments.blank? %>
    <p>These are not any apartments currently in the system</p>
  <% else %>
    <p>These are the current apartments in our system</p>

  <% @apartments.each do |apartment| %>
    <tr>
      <td align="center"><%= apartment.id %></td>
      <td align="center"><%= apartment.num_rooms %></td>
      <td><%= link_to 'Edit', edit_apartment_path(apartment) %></td>
      <td><%= link_to 'Show', {:action => 'show', :id => apartment.id} %></td>
      <td><%= link_to 'Delete', apartment_path(apartment), method: :delete, data: {confirm: "Are you sure to delete this apartment? If you do that, all reservations, bookings and missions will be deleted"} %></td>
    </tr>
      <% end %>
  <% end %>
</table>
